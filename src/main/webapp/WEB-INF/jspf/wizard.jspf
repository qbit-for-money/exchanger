<%@ page pageEncoding="UTF-8" %>
<div class="container" ng-controller="WizardController">
	<div class="row">
		<div class="col-md-12">
			<div class="wizard">
				<ul class="steps">
					<li ng-class="{'active': 0 === currentStepIndex, 'complete': 0 < currentStepIndex}">
						<a href="javascript:void(0)" ng-click="goToStep(0)" title="Currency" tabindex="-1">
							<span class="badge">1</span>
							<span class="glyphicon glyphicon-usd step-title"></span>
							<span class="glyphicon glyphicon-euro step-title"></span>
							<span class="chevron"></span>
						</a>
					</li>
					<li ng-class="{'active': 1 === currentStepIndex, 'complete': 1 < currentStepIndex}">
						<a href="javascript:void(0)" ng-click="goToStep(1)" title="Amount" tabindex="-1">
							<span class="badge">2</span>
							<span class="glyphicon glyphicon-pencil step-title"></span>
							<span class="chevron"></span>
						</a>
					</li>
					<li ng-class="{'active': 2 === currentStepIndex, 'complete': 2 < currentStepIndex}">
						<a href="javascript:void(0)" ng-click="goToStep(2)" title="Result" tabindex="-1">
							<span class="badge">3</span>
							<span class="glyphicon glyphicon-ok step-title"></span>
							<span class="chevron"></span>
						</a>
					</li>
				</ul>
				<div class="actions">
					<button class="btn btn-lg btn-success" 
							ng-disabled="currentStepIndex === 0"
							ng-click="goToPrevStep()"><span class="glyphicon glyphicon-chevron-left"></span></button>
					<button class="btn btn-lg btn-success" 
							ng-disabled="currentStepIndex === (steps.length - 1)"
							ng-click="goToNextStep()"><span class="glyphicon glyphicon-chevron-right"></span></button>
				</div>
			</div>
		</div>
	</div>

	<div class="row ng-hide" ng-show="currentStepIndex === -1">
		<div class="col-xs-offset-0 col-xs-12 col-md-offset-1 col-md-10">
			<div class="alert alert-warning">
				<h3>Please choose <a href="#/steps/currency" class="alert-link">currency pair</a> first.</h3>
			</div>
		</div>
	</div>
</div>